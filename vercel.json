{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS,DELETE" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, x-internal-secret, Authorization" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/history/public/workout/(.*)", "destination": "/api/public-page?type=workout&id=$1" },
    { "source": "/routines/public/(.*)", "destination": "/api/public-page?type=routine&id=$1" },
    { "source": "/history/([^/]+)$", "destination": "/api/public-page?type=workout&id=$1" },
    { "source": "/routines/([^/]+)$", "destination": "/api/public-page?type=routine&id=$1" },
    { "source": "/app/history/public/workout/(.*)", "destination": "/api/public-page?type=workout&id=$1" },
    { "source": "/app/history/public/(.*)", "destination": "/api/history/userId?id=$1" },
    { "source": "/app/history/(.*)", "destination": "/api/workout/workoutId?id=$1" },
    { "source": "/app/routines/public/(.*)", "destination": "/api/public-page?type=routine&id=$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
} 